type Person {
    id: ID!,
    name: String,
    age: Int
}

type Bet {
    horse: String!
    stake: Int!
}

type RaceResult{
    winner: Int!
}

type Query{
    getAll: [Person]
    getOne(id: Int): Person
    getByDataLoader(ids:[Int]): [Person]
    getRaceResult:RaceResult
}

type Mutation{
    createPerson(name: String!, age: Int!): Person
}

type Subscription {
    bet(authorization:String!): Bet
    race:RaceResult
}
